{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ksnip",
    "version": "0.1.0",
    "identifier": "com.k1t.ksnip",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "ksnip",
                "width": 800,
                "height": 600,
                "decorations": false,
                "resizable": true,
                "transparent": true,
                "shadow": false
            }
        ],
        "security": {
            "csp": "default-src 'self'; img-src 'self' ksnip:; connect-src 'self' ksnip:;"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "externalBin": ["binaries/ffmpeg"]
    }
}
